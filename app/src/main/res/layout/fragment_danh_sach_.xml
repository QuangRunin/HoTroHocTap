<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    xmlns:android="http://schemas.android.com/apk/res/android" />
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16dp"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngành Học : "/>
            <Spinner
                android:id="@+id/SpnNganhHoc"
                android:layout_width="300dp"
                android:layout_height="wrap_content">
            </Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16dp"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chuyên Nghành :  "/>
            <Spinner
                android:id="@+id/SpnChuyenNganh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16dp"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Môn Học : "/>
            <ListView
                android:layerType="software"
                android:id="@+id/lvMonHoc"
                android:layout_width="match_parent"
                android:layout_height="200dp"></ListView

                >
        </LinearLayout>
        <!--<TextView-->
            <!--android:id="@+id/tvXacNhan"-->
            <!--android:layout_gravity="center"-->
            <!--android:textColor="#ff0000"-->
            <!--android:textSize="15dp"-->
            <!--android:textStyle="bold"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="***** Xác Nhận Thông Tin *****"/>-->
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16dp"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngành                            : "/>
            <TextView
                android:gravity="center"
                android:textColor="#0d0d0d"
                android:textSize="15dp"
                android:textStyle="bold"
                android:id="@+id/tvNganh"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="2dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16dp"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Môn học bạn đã chọn : "/>
            <AutoCompleteTextView
                android:gravity="center"
                android:textColor="#0d0d0d"
                android:textSize="15dp"
                android:textStyle="bold"
                android:hint="Nhập tên môn học"
                android:id="@+id/tvMonHoc"
                android:completionThreshold="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="2dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16dp"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số tín chỉ                      : "/>
            <EditText
                android:inputType="number"
                android:gravity="center"
                android:textColor="#0d0d0d"
                android:textSize="15dp"
                android:textStyle="bold"
                android:id="@+id/txtTinChi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập số tín chỉ"/>
        </LinearLayout>
        <Button
            android:layout_gravity="center"
            android:id="@+id/btnDangKy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng Ký"/>
    </LinearLayout>
</FrameLayout>
</ScrollView>